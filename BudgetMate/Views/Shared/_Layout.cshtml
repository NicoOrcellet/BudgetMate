<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BudgetMate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BudgetMate.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="d-flex justify-content-center align-items-center w-100 h-100">
                <a id="budgetMateLogo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/logo.png" alt="Logo">
                    <p id="budgetPart">Budget<span id="matePart">Mate</span></p>
                </a>
                <ul id="ulNav" class="d-flex">
                    <li class="liNav">
                        <a class="navItem" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="liNav">
                        <a class="navItem" asp-area="" asp-controller="MoneyTransaction" asp-action="Index">Transacciones</a>
                    </li>
                    <li class="liNav">
                        <a class="navItem" asp-area="" asp-controller="Configuration" asp-action="Index">Configuración</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
